<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mining Website</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        text-align: center;
      }

      /* Navbar styles */
      .navbar {
        background-color: #333;
        overflow: hidden;
        width: 100%;
      }

      .navbar a {
        display: inline-block;
        color: white;
        text-align: center;
        padding: 14px 20px;
        text-decoration: none;
      }

      /* upload button */
      .navbar a.upload {
        background-color: #4caf50;
      }

      .navbar a.upload:hover {
        background-color: #45a049;
      }

      /* Body content styles */
      .content {
        padding: 20px;
        max-width: 600px;
        width: 100%;
      }

      /* List styles */
      ul {
        list-style-type: none;
        padding: 0;
        text-align: left;
      }

      li {
        padding: 10px 0;
      }

      li a {
        color: #007bff;
        text-decoration: none;
      }

      li a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <% if (user.role === 'manager') { %>
    <div class="navbar">
      <a href="/project/users/profile" class="upload">Upload</a>
      <a href="/project/users/profile/logout" class="upload">Sign-out</a>
    </div>
    <% } else { %>
    <div class="navbar">
      <a href="/project/users/profile/logout" class="upload">Sign-out</a>
    </div>
    <% } %>
    <!-- Body content -->
    <div class="content">
      <h1>Welcome <%=user.name%></h1>
      <p>This is a <%=user.role %> panel.</p>
      <!-- List -->
      <h2>List Panels Available</h2>
      <ul>
        <% for (var i = 0; i < data.length; i++) { %>
        <li>
          <a
            href="http://localhost:3000/project/board/<%= data[i].pannel.pannelNumber %>"
            >Panel Number <%= data[i].pannel.pannelNumber %></a
          >
        </li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
